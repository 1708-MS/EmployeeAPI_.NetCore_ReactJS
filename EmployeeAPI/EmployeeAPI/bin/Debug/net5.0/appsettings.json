{
  "ConnectionStrings": {
    "conStr": "Server=HP\\SqlExpress; Database=EmployeeAPI; Trusted_Connection=True; MultipleActiveResultSets=True"
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information"
    },
    "NLog": {
      "MinimumLevel": "Debug",
      "Targets": {
        "file": {
          "Type": "File",
          "FileName": "logs/employeeapi.log",
          "Layout": "${longdate}|${level:uppercase=true}|${logger}|${message} ${exception}"
        }
      }
    }
  },
    "AllowedHosts": "*"
  }
